@model IEnumerable<BookStore.Models.Domain.Author>
@{

}

<div claas="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Author/Add">+ Add More</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Authors</h3>

            <table class="table table-striped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>AuthorName</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.AuthorName</td>
                            <td>
                                <a class="btn btn-success" href="/Author/Update?id=@item.Id"><i class="bi bi-pen"></i></a>  |
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Author/Delete?id=@item.Id"><i class="bg-info bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
